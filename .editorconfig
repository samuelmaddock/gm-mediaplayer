# EditorConfig helps developers define and maintain consistent
# coding styles between different editors and IDEs
# editorconfig.org

root = true

[*]
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.lua]
indent_style = tab
indent_size = 4

[*.html]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
